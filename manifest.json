{
  "manifest_version": 3,
  "name": "KinKong Copilot",
  "description": "Your AI trading copilot for smarter market decisions",
  "version": "0.1.1",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "cookies",
    "scripting"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "host_permissions": [
    "https://api.airtable.com/*",
    "https://swarmtrade.ai/*",
    "https://universalbasiccompute.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.dexscreener.com/*",
        "*://*.x.com/*", 
        "*://*.twitter.com/*",
        "*://*.solscan.io/*",
        "*://*.swarmtrade.ai/*",
        "*://*.universalbasiccompute.ai/*",
        "*://*.raydium.io/*",
        "*://*.birdeye.so/*",
        "*://*.jup.ag/*",
        "*://*.tensor.trade/*",
        "*://*.magiceden.io/*",
        "*://*.orca.so/*",
        "*://*.coingecko.com/*",
        "*://*.coinmarketcap.com/*",
        "*://*.app.meteora.ag/*",
        "*://*.binance.com/*",
        "*://*.kucoin.com/*",
        "*://*.okx.com/*",
        "*://*.bybit.com/*",
        "*://*.gate.io/*",
        "*://*.mexc.com/*",
        "*://*.web.telegram.org/*"
      ],
      "js": ["content.js"],
      "type": "module",
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "assets/*",
      "lib/*",
      "lib/marked.min.js",
      "lib/marked-bridge.js",
      "src/*",
      "src/utils/*",
      "src/content/*", 
      "src/chat/*",
      "src/handlers/*",
      "src/api/*",
      "src/config/*"
    ],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
